root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{md,mdx}]
trim_trailing_whitespace = false

[*.bat]
end_of_line = crlf
charset = utf-8

[*.{js,jsx,ts,tsx,json}]
indent_size = 2

[*.{css,scss,less}]
indent_size = 2

[*.{html,htm}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.prisma]
indent_size = 2
